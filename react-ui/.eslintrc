{
  "extends": [
    "airbnb",
    "plugin:prettier/recommended"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "jsx-a11y",
    "import",
    "prettier"
  ],
  "globals": {
    "window": true,
    "document": true,
    "navigator": true,
    "localStorage": true,
    "sessionStorage": true,
    "FileReader": true,
    "Headers": true,
    "fetch": true
  },
  "rules": {
    "react/jsx-curly-newline": "off",
    "react/prop-types": 0,
    "react/prefer-stateless-function": 0,
    "react/jsx-fragments": [2, "element"],
    "react/jsx-tag-spacing": [
      "error",
      {
        "beforeSelfClosing": "always"
      }
    ],
    "prettier/prettier": "error"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [
          "src"
        ],
        "moduleDirectory": ["node_modules", "/"]
      },
      "babel-module": {}
    }
  }
}
